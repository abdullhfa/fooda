@model RegistrationViewModel 

@{
    ViewBag.Title = "Registration Page";
}

<div>
    <h1>Registration</h1>
    <div>
        <form asp-area=""
              asp-controller="Account" asp-action="Register" method="post" asp-route-returnUrl="@ViewBag.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="UserName"></label>
                <input asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="ConfirmedPassword"></label>
                <input asp-for="ConfirmedPassword" />
                <span asp-validation-for="ConfirmedPassword"></span>
            </div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <input type="submit" value="Register" />
            </div>
        </form>
    </div>
</div>