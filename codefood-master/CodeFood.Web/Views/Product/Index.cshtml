@model IEnumerable<ProductViewModel>

@{
    ViewBag.Title = "Our products";
}

<div class="row">
    <div class="col-md-12">
        <div class="products-heading">
            <h2>OUR PRODUCTS</h2>
        </div>
    </div>
</div>

<section id="products">
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var entity in Model)
            {
                <div class="col-md-3">
                    <div class="products">
                        <a>
                            <img src="/images/@entity.ImagePath" alt="">
                        </a>
                        <a asp-area="" asp-controller="Product" asp-action="ShowSingleProduct" asp-route-id="@entity.Id">
                            <h4>@entity.Name</h4>
                        </a>

                        <p class="price">From: £@entity.Price</p>

                        <a class="view-link shutter" 
                                   style="margin: 0px 0px 10px 0px" 
                                   asp-area="" asp-controller="" 
                                   asp-action="" asp-route-id="@entity.Id">Add to cart</a>

                        <a class="view-link shutter" 
                                   style="margin: 0px 0px 10px 0px" 
                                   asp-area="" asp-controller="Product" 
                                   asp-action="ShowSingleProduct" asp-route-id="@entity.Id">Show more</a>
                    </div>
                </div>
            }
        }
    </div>
</section>